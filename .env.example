# Hardware Ticketing System Configuration

APP_NAME="Hardware Ticketing System"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel_hw
DB_USERNAME=root
DB_PASSWORD=$@natan

# Session & Cache
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

CACHE_STORE=database
CACHE_PREFIX=

# ntfy.sh Notification Settings
# Get your own topic at https://ntfy.sh/
NTFY_URL=https://ntfy.sh
NTFY_TOPIC=hardware_tickets_notifications

# Optional: For private notifications, you can self-host ntfy
# NTFY_URL=https://your-ntfy-server.com
# NTFY_USERNAME=your_username
# NTFY_PASSWORD=your_password

# Mail Configuration (for email notifications if needed)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Additional settings
VITE_APP_NAME="${APP_NAME}"